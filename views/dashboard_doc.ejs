<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Doctor Dashboard - Appointments</title>
    <link rel="stylesheet" href="/css/dashboard.css"> <!-- Optional CSS -->
</head>
<body>
    <div>
        <%- include('navbar') %> <!-- Assuming you have a shared navbar -->
    </div>

    <div class="container">
        <h1>Your Appointments</h1>

        <% if (appointments.length > 0) { %>
            <table border="1" cellpadding="10" cellspacing="0">
                <thead>
                    <tr>
                        <th>Patient Name</th>
                        <th>Age</th>
                        <th>Contact</th>
                        <th>Department</th>
                        <th>Mode of Payment</th>
                    </tr>
                </thead>
                <tbody>
                    <% appointments.forEach(function(appointment) { %>
                        <tr>
                            <td><%= appointment.Patient_Name %></td>
                            <td><%= appointment.Patient_Age %></td>
                            <td><%= appointment.Patient_Contact %></td>
                            <td><%= appointment.Department %></td>
                            <td><%= appointment.Mode_of_Payment %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p>No appointments found for you.</p>
        <% } %>
    </div>
</body>
</html>
